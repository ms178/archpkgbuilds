# Contributor: ms178
# URL: https://github.com/mstorsjo/llvm-mingw

pkgname=llvm-mingw
pkgver=20250402
pkgrel=1
pkgdesc="LLVM-based Mingw-w64 toolchain using MSVCRT"
url="https://github.com/mstorsjo/llvm-mingw"
license=('MIT')
arch=('x86_64')
depends=()
source=("https://github.com/mstorsjo/llvm-mingw/releases/download/${pkgver}/${pkgname}-${pkgver}-msvcrt-ubuntu-20.04-x86_64.tar.xz")
sha256sums=('SKIP') # Replace with actual checksum

package() {
  mkdir -p "${pkgdir}/opt/${pkgname}"
  tar -xJf "${srcdir}/${pkgname}-${pkgver}-msvcrt-ubuntu-20.04-x86_64.tar.xz" -C "${pkgdir}/opt/${pkgname}"
}

install() {
  echo "Installing to /opt/${pkgname}"
}

# use the toolchain with: export PATH="/opt/llvm-mingw/llvm-mingw-20241119-msvcrt-ubuntu-20.04-x86_64/bin:$PATH"
