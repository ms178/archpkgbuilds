arch=(x86_64)
license=(MPL-2.0)
depends=(
  glibc
  nspr
  p11-kit
  sqlite
  zlib
  ca-certificates-mozilla
)
makedepends=(
  gyp
  mercurial
  perl
  python
  llvm
  clang
)
source=(
  "hg+https://hg.mozilla.org/projects/nss#tag=NSS_${pkgver//./_}_RTM"
  bundle.sh
  certdata2pem.py
)
