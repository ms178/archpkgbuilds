       case AC_ADDR_SPACE_LDS:
@@ -4584,11 +4587,16 @@ struct ac_llvm_pointer ac_build_main(const struct ac_shader_args *args, struct a
 {
    LLVMTypeRef arg_types[AC_MAX_ARGS];
 
+   unsigned arg_count = 0;
