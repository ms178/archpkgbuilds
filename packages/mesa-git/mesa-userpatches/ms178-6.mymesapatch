+      /* offset = ctz(mask), must equal c2 */
+      unsigned offset_m = 0;
+#if defined(__clang__) || defined(__GNUC__)
+      offset_m = (unsigned)__builtin_ctz(mask);
+#else
+      {
+         uint32_t tmp = mask;
+         while ((tmp & 1u) == 0u) {
+            ++offset_m;
+            tmp >>= 1;
