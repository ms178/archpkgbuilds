+      const uint32_t shifted = mask >> offset_m;
+      /* shifted must be (2^width - 1) */
+      if (!shifted || ((shifted & (shifted + 1u)) != 0u))
+         return false;
+
+      width = util_bitcount(shifted);
+      if (width == 0 || width > 31 || offset_m + width > 32)
+         return false;
