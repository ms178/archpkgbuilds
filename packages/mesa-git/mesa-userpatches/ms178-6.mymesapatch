+static bool
+combine_sad_u8(opt_ctx& ctx, aco_ptr<Instruction>& add_instr)
+{
+   if (add_instr->opcode != aco_opcode::v_add_u32 ||
+       add_instr->usesModifiers() ||
+       ctx.program->gfx_level < GFX9)
+      return false;
+
+   int sad_idx = -1;
+   Instruction* sad = nullptr;
