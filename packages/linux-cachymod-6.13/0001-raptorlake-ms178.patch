+			if (donor_group >= 0 && donor_cpu >= 0) {
+				cpumask_clear_cpu(donor_cpu, &result[donor_group]);
+				cpumask_set_cpu(donor_cpu, &result[i]);
+			} else {
+				/* Last resort: fall back to standard distribution */
+				kfree(result);
+				return group_cpus_evenly(num_grps);
+			}
+		}
+	}
+
+	return result;
