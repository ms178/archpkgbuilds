+						/* Cache topology considerations */
+						cache_mask = get_cache_shared_mask(cpu);
+						for_each_cpu(sibling, &result[j]) {
+							if (sibling != cpu) {
+								if (cache_mask && cpumask_test_cpu(sibling, cache_mask))
