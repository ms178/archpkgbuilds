-KBUILD_RUSTFLAGS += -Ctarget-feature=-sse,-sse2,-sse3,-ssse3,-sse4.1,-sse4.2,-avx,-avx2
+KBUILD_CFLAGS += -mno-sse -mno-mmx
+KBUILD_RUSTFLAGS += -C target-cpu=native
 
 ifeq ($(CONFIG_X86_KERNEL_IBT),y)
