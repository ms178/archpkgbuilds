# Maintainer: Dāvis Mosāns <davispuh at gmail dot com>

_pkgname=polkit-qt6
pkgname=$_pkgname-git
pkgver=v0.114.0.r10.g6f8d030
pkgrel=1
pkgdesc='A library that allows developers to access PolicyKit API with a nice Qt-style API'
arch=('i686' 'x86_64')
url='https://invent.kde.org/libraries/polkit-qt-1'
license=('LGPL')
depends=('polkit' 'qt6-base')
makedepends=('git')
provides=("$_pkgname")
conflicts=("$_pkgname")
source=("$_pkgname::git+https://invent.kde.org/libraries/polkit-qt-1.git")
sha256sums=('SKIP')

pkgver() {
    cd "$srcdir/$_pkgname"
    git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    cd "$srcdir"
    mkdir -p build
}

build() {
    cd "$srcdir/build"
    cmake "$srcdir/$_pkgname" \
    -DQT_MAJOR_VERSION=6 \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_C_STANDARD=17 \
    -DCMAKE_CXX_STANDARD=17 \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_DESTINATION=/usr/lib
     make
}

package() {
    cd "$srcdir/build"
    make DESTDIR="${pkgdir}" install
}
