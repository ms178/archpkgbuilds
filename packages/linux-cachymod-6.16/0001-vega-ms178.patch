+	if (cap < PREFETCH_ABS_MIN_PAGES) cap = PREFETCH_ABS_MIN_PAGES;
+	if (cap > PREFETCH_ABS_MAX_PAGES) cap = PREFETCH_ABS_MAX_PAGES;
