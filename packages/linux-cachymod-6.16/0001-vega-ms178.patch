+		unsigned long now_j = jiffies;
+		u64 now_ns = ktime_get_ns();
+		if (pc->last_bo == (const void *)abo &&
+		    pc->last_vma == (const void *)vmf->vma &&
+		    time_before(now_j, pc->last_j + vega_pf_streak_window_jiffies)) {
