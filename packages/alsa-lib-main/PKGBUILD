pkgname=alsa-lib
pkgver=1.2.13
pkgrel=3.1
pkgdesc="An alternative implementation of Linux sound support"
arch=(x86_64)
url="https://www.alsa-project.org"
license=(LGPL2.1)
depends=(
  alsa-topology-conf
  alsa-ucm-conf
  glibc
)
provides=(
  libasound.so
  libatopology.so
)
install=$pkgname.install
source=("git+https://github.com/alsa-project/alsa-lib.git"
        "alsa-lib-macro-collision-lf.patch")
sha512sums=('8f39c8166c3648d46695a9287d9b9a35e5bfffed11d79e868ff7aba92d0fee792e82784186ebeb2a3e44d6b617c916025c7fce9a802565bb8e0dc8fdcce2311a'
            'PUT_SHA512SUM_FOR_PATCH_HERE')
b2sums=('ec0c6966802196016679652292a579c6301cce33a2e887fce79cdb80629b6df047269787445cf0645e6cf43d3d2aae8fa57ddad5ab79fc254ee65a0ed695f449'
        'PUT_B2SUM_FOR_PATCH_HERE')
validpgpkeys=('F04DF50737AC1A884C4B3D718380596DA6E59C91') # ALSA Release Team (Package Signing Key v1) <release@alsa-project.org>

prepare() {
  cd $pkgname
  autoreconf -fiv
  patch -p1 < ../alsa-lib-macro-collision-lf.patch
}

build() {
  # -flto=auto is not supported: https://github.com/alsa-project/alsa-lib/issues/110
  #CFLAGS+=" -flto-partition=none"
  cd $pkgname
  ./configure --prefix=/usr --without-debug
  # prevent excessive overlinking due to libtool
  #sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make
}

check() {
  export LD_LIBRARY_PATH="$pkgname/src/.libs/:$LD_LIBRARY_PATH"
  make -k check -C $pkgname
}

package() {
  make DESTDIR="$pkgdir" install -C $pkgname
  install -vDm 644 $pkgname/{MEMORY-LEAK,TODO,NOTES,ChangeLog,doc/asoundrc.txt} -t "$pkgdir/usr/share/doc/$pkgname/"
}
